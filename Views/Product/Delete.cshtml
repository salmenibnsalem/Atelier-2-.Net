@model Atelier2.Models.Product

<h2>Delete Product</h2>

<div>
    <h4>Are you sure you want to delete this product?</h4>
    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="~/images/@Model.Image" height="200" alt="Product Image">
        <div class="card-body">
            <h5 class="card-title">@Model.Désignation</h5>
            <p class="card-text"><strong>Price:</strong> @Model.Prix</p>
            <p class="card-text"><strong>Quantity:</strong> @Model.Quantite</p>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
